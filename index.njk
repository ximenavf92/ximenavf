<section id="contact" class="inner-section contact-section">
  <div class="container">
    <div class="form-box">
      <h2>Let's Chat!</h2>
      <p>Send me an email at <a href="mailto:hola@ximenavf.com">hola@ximenavf.com</a> or leave me a message below</p>
      <form class="contact-form" name="contact" method="POST" netlify-honeypot="bot-field" data-netlify="true" data-netlify-recaptcha="true">
        <!-- HoneyPot Field — Reduce spam -->
          <label id="honeypot">Don’t fill this out if you’re human: <input name="bot-field" /></label>
        <!-- Form Fields -->
          <label for="name" class="form-field--name">Name
            <input id="name" name="name" type="text">
         </label>
          
          <label for="email" class="form-field--email">Email
            <input id="email" name="email" type="email">
          </label>

        <label for="message" class="form-field--message">Message
          <textarea id="message" name="message" ></textarea>
        </label>

        <div data-netlify-recaptcha="true" id="captcha" class="form-field--captcha"></div>

        <button type="submit" class="button button-primary--icon">Send Message</button></form>
    </div>
  </div>
  <div class="container"><img src="/assets/img/contact-laptop-illustration.svg" alt="" class="contact-section--illustration"></div>
</section>