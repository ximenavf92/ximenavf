<ul class="postlist">
  {# If home page show 3 posts #}
  {% if templateClass === 'tmpl-home'  %}
    {% for post in postslist | reverse | head(3) %}
    <li class="postlist-item">
        <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
        <h3 class="postlist--post-title">
          <a href="{{ post.url | url }}" class="postlist-link">
        {% if post.data.title %}{{ post.data.title }}
        {% else %}<code>{{ post.url }}</code>
        {% endif %}
          </a>
        </h3>
        <p class="postlist-excerpt">{{ post.data.excerpt }}</p>
        <ul class="post-tag--list">
        {% for tag in post.data.tags %}
            {%- if collections.tagList.indexOf(tag) != -1 -%}
            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <li class="post-tag--list-item">
              <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
            </li>
            {%- endif -%}
        {% endfor %}   
        </ul>
        <a href="{{ post.url }}" class="arrow-link">Read more</a> 
  </li>
  {% endfor %} 

  {% else %}
    {% for post in postslist | reverse %}
    <li class="postlist-item">
        <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
        <h3 class="postlist--post-title">
          <a href="{{ post.url | url }}" class="postlist-link">
        {% if post.data.title %}{{ post.data.title }}
        {% else %}<code>{{ post.url }}</code>
        {% endif %}
          </a>
        </h3>
        <p class="postlist-excerpt">{{ post.data.excerpt }}</p>
        <ul class="post-tag--list">
        {% for tag in post.data.tags %}
            {%- if collections.tagList.indexOf(tag) != -1 -%}
            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <li class="post-tag--list-item">
              <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
            </li>
            {%- endif -%}
        {% endfor %}   
        </ul>
        <a href="{{ post.url }}" class="arrow-link">Keep reading</a> 
  </li>
  {% endfor %} 

  {% endif %}
</ul>
